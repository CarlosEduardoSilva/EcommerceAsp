@using EcommerceOsorioManha.Models
@model EcommerceOsorioManha.Models.Produto

@{
    Produto produto = ViewBag.ProdutoAlteracao;
}

<h1>AlterarProduto</h1>
<div>
    @using (Html.BeginForm("AlterarProduto", "Produto", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <fieldset>

            @Html.HiddenFor(model => model.ProdutoId)

            <div class="form-group">
                @Html.Label("Nome do Produto", new { @class = "control-label col-sm-2" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(model => model.Nome,
                    new { @class = "form-control", @placeholder = "Nome do Produto" })
                </div>

            <div class="form-group">
                    @Html.Label("Descrição", new { @class = "control-label col-sm-2" })
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control", @placeholder = "Nome do Produto" })
                    </div>
                <div class="form-group">
                        @Html.Label("Preço", new { @class = "control-label col-sm-2" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.Preco, new { @class = "form-control", @placeholder = "Nome do Produto" })
                        </div>
                <div class="form-group">
                            @Html.Label("Categoria", new { @class = "control-label col-sm-2" })
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.Categoria, new { @class = "form-control", @placeholder = "Nome do Produto" })
                            </div>
                        </div>

                        <input type="submit" value="Cadastrar" />
        </fieldset>
    }
</div> 