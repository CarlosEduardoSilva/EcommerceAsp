<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>@Page.Title</title>
    @RenderSection("head", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        @Html.ActionLink("Ecommerce - UP", "Index", "Produto", null, new { @class = "navbar-brand" })
        @Html.ActionLink("Categorias", "Index", "Categoria", null, new { @class = "navbar-brand" })

       
    </nav>
    <div id="content" class="container" style="margin-top:30px">
        @RenderBody()
    </div>

    <hr margin-top:30px />
    <footer style="text-align:center;">
        <p>&copy; @DateTime.Now.Year - Desenvolvido por Carlos E. Silva</p>
    </footer>
</body>
</html>
